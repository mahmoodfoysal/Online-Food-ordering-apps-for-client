<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:padding="5dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Name:"/>

        <TextView
            android:id="@+id/offerfname"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/offername"
            android:layout_marginEnd="31dp"
            android:text="Burger"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/offerfimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/a" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Quantity:"/>
        <TextView
            android:id="@+id/offerfquantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Discount Price:"/>
        <TextView
            android:id="@+id/offerfprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fdes"
            android:text="30$"
            android:textSize="25sp"
            tools:ignore="UnknownId"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Restaurant Name:"/>

        <TextView
            android:id="@+id/offerfres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Of Resturent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Food ID:"/>

        <TextView
            android:id="@+id/offerfid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fname"
            android:text="Order Id"
            android:textSize="20sp"/>



    </LinearLayout>

</android.support.v7.widget.CardView>